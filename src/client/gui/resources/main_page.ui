<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkBox" id="row_page">
    <property name="orientation">vertical</property>
    <property name="spacing">6</property>
    
    <!-- HEADER -->
    <child>
      <object class="GtkBox" id="chat_header">
	<property name="orientation">horizontal</property>
	<property name="margin-start">6</property>
        <property name="margin-end">6</property>
	<property name="spacing">0</property>
	<child>
	  <object class="GtkBox" id="header_left"/>
	</child>
	<child>
	  <object class="GtkBox" id="header_right">
            <property name="orientation">horizontal</property>
	    <property name="halign">end</property>
            <property name="spacing">6</property>
	    <child>
              <object class="GtkButton" id="info_button">
                <property name="label">i</property>  <!-- Import Icon -->
                <style>
                  <class name="info-button"/>
                </style>
              </object>
            </child>
          </object>
	</child>
      </object>
    </child>
    
    <!-- MESSAGES ZONE -->
    <child>
      <object class="GtkScrolledWindow">
	<property name="vexpand">True</property>
	<child>
          <object class="GtkBox" id="messages_box">
	    <property name="orientation">vertical</property>
	    <property name="spacing">12</property>
	    <property name="margin-top">6</property>
            <property name="margin-bottom">6</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
	  </object>
	</child>
      </object>
    </child>
    
    <!-- TEXT ENTRY -->
    <child>
      <object class="GtkBox" id="entry_box">
	<property name="orientation">horizontal</property>
	<property name="margin-start">6</property>
        <property name="margin-end">6</property>
	<property name="spacing">6</property>
	<child>
          <object class="GtkEntry" id="message_entry">
            <property name="hexpand">True</property>
            <property name="placeholder-text">Type a message</property>
	    <style>
	      <class name="type-entry"/>
	    </style>
          </object>
	</child>
	<child>
          <object class="GtkButton" id="send_button">
            <property name="label">Send</property> <!-- Import Icon-->
	    <style>
	      <class name="send-button"/>
	    </style>
          </object>
	</child>
      </object>
    </child>
  </object>
</interface>
